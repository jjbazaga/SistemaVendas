@model LoginModel

<style>
    .login-form {
        width: 340px;
        margin: 50px auto;
        font-size: 15px;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>


<div class="login-form">
    <form asp-controller="Home" asp-action="Login" method="post">
        <h2 class="text-center">Sistema Vendas</h2>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Entrar</button>
        </div>
        <div class="clearfix">
            <label class="float-left form-check-label"><input type="checkbox"> Lembrar acesso</label>
            <a href="#" class="float-right"> | Esqueceu a senha?</a>
        </div>
    </form>
    <p class="text-center"><a href="#">Criar uma Conta</a></p>
</div>